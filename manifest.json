{
  "manifest_version": 3,
  "name": "Reviews Coach - Google Reviews Reply Helper",
  "version": "1.2.1",
  "description": "Robustly extracts Google review text + rating and generates reply variants via Gemini. Includes debug logs.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://*.google.com/maps/*",
    "https://*.google.pl/maps/*",
    "https://business.google.com/*",
    "https://business.google.pl/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.google.com/maps/*",
        "https://*.google.pl/maps/*",
        "https://business.google.com/*",
        "https://business.google.pl/*"
      ],
      "js": [
        "content/namespace.js",
        "content/dom.js",
        "content/reviews.js",
        "content/chips.js",
        "content/panel.js",
        "content/scan.js",
        "content/index.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {},
  "options_page": "options.html",
  "oauth2": {
    "client_id": "519901113833-gol3md6v7uh2rs2rgg87ctmk5j1ruclv.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css"
      ],
      "matches": [
        "*://*.google.com/*",
        "*://*.google.pl/*",
        "*://business.google.com/*",
        "*://business.google.pl/*"
      ]
    }
  ]
}